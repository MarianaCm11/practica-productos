<body>
    <h1>Registro de datos</h1>
    <div class="contenedor">
        <form class="formP" action="/editarProducto" method="post" id="formulario">
            <input readonly value=<%= id %>  name="id"  id="id" type="hidden" placeholder="id">
            <label for="nombre">Nombre: </label><span class="ocultar mensajeNombre">Nombre no v치lido</span>     
            <input value=<%= nombre %> autofocus name="nombre" id="nombre" type="text" placeholder="Nombre">
            <i class="ocultar circleCrossNombre fa-regular fa-circle-xmark"></i>
            <i class="ocultar circleCheckNombre fa-regular fa-circle-check"></i>

            <label for="precio">Precio: </label><span class="ocultar mensajePrecio">Precio no v치lido</span>
            <input value=<%= precio %>  name="precio" id="precio" type="text" placeholder="Precio">
            <i class="ocultar circleCrossPrecio fa-regular fa-circle-xmark"></i>
            <i class="ocultar circleCheckPrecio fa-regular fa-circle-check"></i>

            <label for="cantidad">Cantidad: </label><span class="ocultar mensajeCantidad">Cantidad no v치lida</span>
            <input value=<%= cantidad %>  name="cantidad" id="cantidad" type="text" placeholder="Cantidad">

            <i class="ocultar circleCrossCantidad fa-regular fa-circle-xmark"></i>
            <i class="ocultar circleCheckCantidad fa-regular fa-circle-check"></i>

            <label for="descuento">Descuento: </label><span class="ocultar mensajeDescuento">Descuento no v치lido</span>
            <input value=<%= descuento %>  name="descuento" id="descuento" type="text" placeholder="Descuento">
            <i class="ocultar circleCrossDescuento fa-regular fa-circle-xmark"></i>
            <i class="ocultar circleCheckDescuento fa-regular fa-circle-check"></i>

            <div class="btn">
                <a href="/mostrarProductos"> 
                <button class="buttonP" type="submit">Guardar datos</button>
                </a>
            </div>
        </form>
    </div>
    
</body>
</html>