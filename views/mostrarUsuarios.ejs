<%- include("templates/encabezado")%>
    <div class="contendor">
        
        <div class="table_header">
            <h2>Lista de usuarios</h2>
            <a href="/agregarUsuario">
            <button>Crear nuevo</button></a>
            <a href="/mostrarProductos">
                <button>Ir a productos</button></a>
        </select>

          </div>
        <table>
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nombre</th>
                    <th>Celular</th>
                    <th>Correo</th>
                    <th>Editar / Borrar</th>
                </tr>
            </thead>
            <tbody>
                <% usuariosCorrectos.forEach((usuario)=>{ %>
                 <tr>
                    <td><%= usuario.id %></td>
                    <td><%= usuario.nombre %></td>
                    <td><%= usuario.celular %></td>
                    <td><%= usuario.correo %></td>
                    <td>
                        <a href="/editarUsuario/<%= usuario.id %>"> 
                        <i class="bi bi-pencil-square" id="icons"></i>
                        </a>
                        <a href="/borrarUsuario/<%= usuario.id %>">
                        <i class="bi bi-trash" id="icons"></i>
                        </a>
                      </td>
                 </tr>
            </tbody>
            <% }); %>
        </table>
        <div class="table_fotter">
          </div>
    </div>
