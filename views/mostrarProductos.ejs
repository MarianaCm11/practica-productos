<%- include("templates/encabezado")%>
    <div class="contendor">
        
        <div class="table_header">
            <h2>Lista de productos</h2>
            <a href="/agregarProducto">
            <button class="btnP">Crear nuevo</button></a>
            <a href="/">
                <button class="btnP">Ir a usuarios</button></a>
        </select>

          </div>
        <table>
            <thead class="p">
                <tr>
                    <th>Id</th>
                    <th>Nombre</th>
                    <th>Precio</th>
                    <th>Cantidad</th>
                    <th>Descuento</th>
                    <th>Editar / Borrar</th>
                </tr>
            </thead>
            <tbody>
                <% productosCorrectos.forEach((producto)=>{ %>
                 <tr>
                    <td><%= producto.id %></td>
                    <td><%= producto.nombre %></td>
                    <td><%= producto.precio %></td>
                    <td><%= producto.cantidad %></td>
                    <td><%= producto.descuento %></td>
                    <td>
                        <a href="/editarProducto/<%= producto.id %>"> 
                        <i class="bi bi-pencil-square" id="icons"></i>
                        </a>
                        <a href="/borrarProducto/<%= producto.id %>">
                        <i class="bi bi-trash" id="icons"></i>
                        </a>
                      </td>
                 </tr>
            </tbody>
            <% }); %>
        </table>
        <div class="table_fotter">
          </div>
    </div>
